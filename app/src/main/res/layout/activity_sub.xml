<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/sub_Layout"
    android:focusableInTouchMode="true"
    tools:context="com.example.yamashitamasaki.hello_world.SubActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="大人"
        android:id="@+id/textView3"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/EditText3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:id="@+id/EditText"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="人"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/EditText"
        android:layout_toEndOf="@+id/EditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="小人"
        android:id="@+id/textView5"
        android:layout_above="@+id/textView15"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="期日"
        android:id="@+id/textView6"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/EditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="備えちゃお日数"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:id="@+id/EditText2"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="人"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/EditText2" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:id="@+id/EditText3"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_above="@+id/textView16"
        android:layout_toEndOf="@+id/textView6"
        android:text="14" />

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:id="@+id/EditText4"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:text="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="日"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/EditText3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="日"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toEndOf="@+id/EditText4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="幼児"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/EditText5"
        android:layout_toStartOf="@+id/EditText" />

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLength="2"
        android:id="@+id/EditText5"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_above="@+id/EditText"
        android:layout_toEndOf="@+id/textView11"
        android:layout_marginBottom="40dp"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="人"
        android:id="@+id/textView12"
        android:layout_alignTop="@+id/textView11"
        android:layout_toEndOf="@+id/EditText5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="※2才以下"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="※中学生以上"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="※2才～小学生"
        android:id="@+id/textView15"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="※賞味期限が迫ると警告文を表示します"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="※何日分の備蓄品を準備するかを設定できます"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="設定"
        android:id="@+id/textView20"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="jp.co.nichiwa_system.yamashitamasaki.Sonaechao.ButtonFragment"
        class="jp.co.nichiwa_system.yamashitamasaki.Sonaechao.ButtonFragment"
        android:id="@+id/fragment3"
        tools:layout="@layout/fragment_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
